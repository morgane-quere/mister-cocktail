<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
     <li>
       <%= dose.description %> 
       <%= dose.ingredient.name %>
       <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
     </li>
  <% end %>
</ul>

<%= link_to "Back to list", cocktails_path %>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>