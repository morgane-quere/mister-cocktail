<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://assets.afcdn.com/album/D20170915/phalbm25238705_w980h638c1.jpg);">
  <div class="container" id="banner-container">   
    <h1>Cocktail Manager</h1>
    <h2><i class="fas fa-cocktail"></i></h2>
    <p>For finest mixologists</p>
    <a class="btn btn-rounded-corners btn-blank" href="#cocktails-list">Choose a cocktail</a>
  </div>  
</div>

<h2>Chose your cocktail</h2>
<%= link_to "New cocktail", new_cocktail_path, { class: "btn btn-rounded-corners btn-orange" } %>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.photo.attached? ?  cl_image_path(cocktail.photo.key) : "https://www.destinationcocktails.fr/wp-content/uploads/recipes/079_tropicalkamasutra.jpg" %>')">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>      
  <% end %>
</div>
